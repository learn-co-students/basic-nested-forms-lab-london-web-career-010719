<%= form_for @recipe do |f| %>
  Title: <%= f.text_field :title %>

  <br/><br/>

  Add Ingredients: <br/><br/>
  <%= f.fields_for :ingredients do |ing| %>
    name: <%= ing.text_field :name %><br/>
    qty: <%= ing.number_field :quantity %><br/>
    <br/>
  <% end %>

  <%= f.submit %>


<% end %>
